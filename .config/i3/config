bindsym Control+Shift+7 move container to workspace $ws7
bindsym Control+Shift+8 move container to workspace $ws8
bindsym Control+Shift+9 move container to workspace $ws9
bindsym Control+Shift+0 move container to workspace $ws10
bindsym Control+Shift+Right move window to workspace next
bindsym Control+Shift+Left move window to workspace prev

# reload the configuration file
bindsym $mod+q reload
# exit i3 (logs you out of your X session)
#bindsym $mod+Shift+x exec "i3-msg exit"
bindsym $mod+Shift+q exec /home/tgaref/local/bin/rofi-system.fish

set $bg-color 	         #2f343f
set $inactive-bg-color   #2f343f
set $text-color          #f3f4f5
set $inactive-text-color #676E7D
set $urgent-bg-color     #E53935

# window colors
#                       border              background         text                 indicator
client.focused          $bg-color           $bg-color          $text-color          #00ff00
client.unfocused        $inactive-bg-color $inactive-bg-color $inactive-text-color #00ff00
client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color #00ff00
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          #00ff00

# Volume control
bindsym XF86AudioRaiseVolume exec amixer set Master 5%+ ; exec pkill -SIGRTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec amixer set Master 5%- ; exec pkill -SIGRTMIN+10 i3blocks
bindsym XF86AudioMute exec amixer -q set Master toggle

# resizing windows
bindsym $mod+Shift+h resize shrink width 5 px or 5 ppt
bindsym $mod+Shift+j resize grow height 5 px or 5 ppt
bindsym $mod+Shift+k resize shrink height 5 px or 5 ppt
bindsym $mod+Shift+l resize grow width 5 px or 5 ppt

mode "launch" {
        # These bindings trigger as soon as you enter the launch mode

        bindsym e exec emacsclient -c
        bindsym b exec firefox
        bindsym u exec urxvt -e tmux
	bindsym t exec alacritty --config-file /home/tgaref/.config/alacritty/alacritty.yml
        # back to normal: Enter or Escape or $mod+z
        bindsym Return mode "default"
        bindsym Escape mode "default"
#        bindsym $mod+z mode "default"	
}

bindsym $mod+r mode "launch"

